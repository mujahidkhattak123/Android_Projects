<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"

    tools:context=".questionare_page3">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#F4F4F4"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginTop="13dp"
            android:text="COVID-19 Self-Assessment Tool"
            android:paddingLeft="18dp"
            android:paddingRight="11dp"
            android:layout_marginBottom="2dp"
            android:justificationMode="inter_word"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:paddingTop="3dp"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:background="#FB8C00"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Are you answering for yourself or someone else ?"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:layout_marginBottom="13dp"
                    android:justificationMode="inter_word"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="90dp"
                        android:id="@+id/btn_voiceurdu"
                        android:background="@drawable/roundbutton"
                        android:backgroundTint="#D81B60"
                        android:text="اردو"
                        android:drawableLeft="@drawable/play_24"
                        android:paddingLeft="4dp"
                        android:textColor="#fff"
                        android:layout_marginLeft="4dp"
                        android:drawableTint="#fff"
                        android:layout_height="40dp"/>
                    <Button
                        android:layout_width="90dp"
                        android:layout_marginTop="12dp"
                        android:id="@+id/btn_voiceenglish"
                        android:background="@drawable/roundbutton"
                        android:backgroundTint="#D81B60"
                        android:drawableLeft="@drawable/play_24"
                        android:paddingLeft="4dp"
                        android:layout_gravity="fill_vertical"
                        android:text="English"
                        android:drawableTint="#fff"
                        android:layout_marginLeft="30dp"
                        android:textColor="#fff"
                        android:layout_height="40dp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/txt_mysel"
                    android:paddingTop="10dp"
                    android:textColor="#D81B60"
                    android:textSize="12sp"
                    android:background="@drawable/roundbutton"
                    android:backgroundTint="#fff"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:visibility="invisible"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:justificationMode="inter_word"
                    />

                <TextView
                    android:id="@+id/txt_some_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/roundbutton"
                    android:backgroundTint="#fff"
                    android:justificationMode="inter_word"
                    android:paddingLeft="11dp"
                    android:paddingTop="3dp"
                    android:paddingRight="11dp"
                    android:textColor="#D81B60"
                    android:textSize="12sp"
                    />

                <Spinner
                    android:id="@+id/spinner_age"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/cornerround"
                    android:backgroundTint="#D1D0D0"
                    android:entries="@array/age_arrays"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:prompt="@string/age_data"
                    android:paddingRight="16dp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="100dp"
                android:layout_marginTop="12dp"
                android:id="@+id/btnpre"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#1E88E5"
                android:layout_gravity="fill_vertical"
                android:text="Back"

                android:drawableLeft="@drawable/back_24"
                android:drawableTint="#fff"
                android:paddingLeft="6dp"
                android:textColor="#fff"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"/>
            <Button
                android:layout_width="100dp"
                android:layout_marginTop="12dp"
                android:id="@+id/btnnext"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#1E88E5"
                android:layout_gravity="fill_vertical"
                android:text="Next"
                android:drawableRight="@drawable/next_24"
                android:paddingRight="6dp"
                android:drawableTint="#fff"
                android:textColor="#fff"
                android:layout_marginLeft="110dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>