<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"

    tools:context=".fragments_aftter_Allcheckbox_IsUncheck_checkbox9_page_3">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#F4F4F4"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginTop="13dp"
            android:text="COVID-19 Self-Assessment Tool"
            android:paddingLeft="18dp"
            android:paddingRight="11dp"
            android:layout_marginBottom="2dp"
            android:justificationMode="inter_word"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:background="#FB8C00"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/fragments_aftter_Allcheckbox_IsUncheck_checkbox9_page_3"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:layout_marginBottom="13dp"
                    android:justificationMode="inter_word"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="90dp"
                        android:id="@+id/btn_voiceurdu"
                        android:background="@drawable/roundbutton"
                        android:backgroundTint="#D81B60"
                        android:text="اردو"
                        android:drawableLeft="@drawable/play_24"
                        android:paddingLeft="4dp"
                        android:textColor="#fff"
                        android:layout_marginLeft="4dp"
                        android:drawableTint="#fff"
                        android:layout_height="40dp"/>
                    <Button
                        android:layout_width="90dp"
                        android:layout_marginTop="12dp"
                        android:id="@+id/btn_voiceenglish"
                        android:background="@drawable/roundbutton"
                        android:backgroundTint="#D81B60"
                        android:drawableLeft="@drawable/play_24"
                        android:paddingLeft="4dp"
                        android:layout_gravity="fill_vertical"
                        android:text="English"
                        android:drawableTint="#fff"
                        android:layout_marginLeft="30dp"
                        android:textColor="#fff"
                        android:layout_height="40dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="100dp"
                        android:layout_marginTop="18dp"
                        android:id="@+id/btn_yes"
                        android:background="@drawable/roundbutton"
                        android:backgroundTint="#7CB342"
                        android:layout_gravity="fill_vertical"
                        android:text="Yes"
                        android:textColor="#fff"
                        android:layout_marginLeft="4dp"
                        android:layout_height="40dp"/>
                    <Button
                        android:layout_width="100dp"
                        android:layout_marginTop="18dp"
                        android:id="@+id/btn_no"
                        android:background="@drawable/roundbutton"
                        android:backgroundTint="#7CB342"
                        android:layout_gravity="fill_vertical"
                        android:text="No"
                        android:textColor="#fff"
                        android:layout_marginLeft="6dp"
                        android:layout_height="40dp"/>


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/txt_select"
                    android:paddingTop="10dp"
                    android:textColor="#1E88E5"
                    android:textSize="12sp"
                    android:background="@drawable/roundbutton"
                    android:backgroundTint="#fff"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:justificationMode="inter_word"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/txt_yes"
                    android:paddingTop="3dp"
                    android:textColor="#D81B60"
                    android:textSize="12sp"
                    android:background="@drawable/roundbutton"
                    android:backgroundTint="#fff"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:visibility="invisible"
                    android:text="You are ok -Thanks for taking part in the survey..
"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:layout_marginBottom="13dp"
                    android:justificationMode="inter_word"
                    />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="100dp"
                android:layout_marginTop="12dp"
                android:id="@+id/btnpre"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#1E88E5"
                android:layout_gravity="fill_vertical"
                android:text="Back"

                android:drawableLeft="@drawable/back_24"
                android:drawableTint="#fff"
                android:paddingLeft="6dp"
                android:textColor="#fff"
                android:layout_marginLeft="20dp"
                android:layout_height="40dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_marginTop="12dp"
                android:id="@+id/btnnext"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#1E88E5"
                android:layout_gravity="fill_vertical"
                android:text="Next"
                android:drawableRight="@drawable/next_24"
                android:paddingRight="6dp"
                android:drawableTint="#fff"
                android:textColor="#fff"
                android:layout_marginLeft="95dp"
                android:visibility="invisible"
                android:layout_height="40dp"/>
        </LinearLayout>
    </LinearLayout>



</FrameLayout>