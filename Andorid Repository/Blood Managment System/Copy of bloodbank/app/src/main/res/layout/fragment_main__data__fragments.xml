<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Data_Fragments">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_gravity=""
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:paddingTop="3dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:background="#550912"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="HOME"
                    android:drawableTop="@drawable/ic_baseline_home_24"
                    android:gravity="center"
                    android:layout_marginBottom="13dp"
                    android:paddingBottom="4dp"
                    android:justificationMode="inter_word"
                    />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_create_account"
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:paddingTop="3dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:background="#550912"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Sign up"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_baseline_supervisor_account_24"
                    android:layout_marginBottom="13dp"
                    android:paddingBottom="4dp"
                    android:justificationMode="inter_word"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content">

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_search_blood_camp"
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:paddingTop="3dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:background="#550912"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="SEARCH Blood Camp"
                    android:drawableTop="@drawable/ic_baseline_search_24"
                    android:gravity="center"
                    android:layout_marginBottom="13dp"
                    android:paddingBottom="4dp"
                    android:justificationMode="inter_word"
                    />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content">

                <Button
                android:id="@+id/btn_request_for_blood_donation"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:paddingTop="3dp"
                android:textColor="#fff"
                android:textSize="14sp"
                android:background="#550912"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Request For Blood Donation"
                android:gravity="center"
                android:layout_marginBottom="13dp"
                android:paddingBottom="4dp"
                android:justificationMode="inter_word"
                />




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_user_profile"
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:paddingTop="3dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:background="#550912"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="User Blood Detail(user profile)"
                    android:gravity="center"
                    android:layout_marginBottom="13dp"
                    android:paddingBottom="4dp"
                    android:justificationMode="inter_word"
                    />




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:paddingTop="3dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:background="#550912"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text=" Log Out"
                    android:drawableTop="@drawable/ic_baseline_account_circle_24"
                    android:gravity="center"
                    android:layout_marginBottom="13dp"
                    android:paddingBottom="4dp"
                    android:justificationMode="inter_word"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>